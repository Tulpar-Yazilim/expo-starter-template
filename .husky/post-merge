#!/bin/sh

changed() {
  git diff --name-only HEAD@{1} HEAD | grep -q "^$1"
}

echo "ğŸ” Checking for changes in yarn.lock..."

if changed "yarn.lock"; then
  echo "ğŸ“¦ yarn.lock has changed."
  echo "ğŸ‘‰ Please run 'yarn install' to sync your dependencies."
else
  echo "âœ… Dependencies are up to date."
fi

echo
echo "â„¹ï¸ If necessary, you can run:"
echo "   yarn prebuild"
echo

exit 0
